<h3>Web Analytics Report</h3>
<div class="graph-controls">
    <div class="graph-grouping">
    	<div class="graph-field">
    		<label>View By</label>
    		<select id="groupBy" name="groupBy">
    			<option value="monthly">Monthly</option>
    			<option value="yearly">Yearly</option>
    			<option value="custom">Custom</option>
    		</select>
    	</div>
    	<div class="graph-field year">
    		<label>Select Year</label>
    		<select id="yearSelection">
    			<option value="2021">2021</option>
    			<option value="2022">2022</option>
    			<option value="2023">2023</option>
    		</select>
    	</div>
    
    	<div class="graph-field month">
    		<label>Select Month</label>
    		<select id="monthSelection">
    			<option value="1">January</option>
    			<option value="2">February</option>
    			<option value="3">March</option>
    			<option value="4">April</option>
    			<option value="5">May</option>
    			<option value="6">June</option>
    			<option value="7">July</option>
    			<option value="8">August</option>
    			<option value="9">September</option>
    			<option value="10">October</option>
    			<option value="11">November</option>
    			<option value="12">December</option>
    		</select>
    	</div>
    	<div class="graph-field">
    		
    		<button id="submitData">Filter</button>
    	</div>
	</div>
	<div class="date-range-container">
    	<div class="date-range">
        	<div class="graph-field">
        		<label>Start Date</label>
        		<input type="date" id="startDate">
        	</div>
        	<div class="graph-field">
        		<label>End Date</label>
        		<input type="date" id="endDate">
        	</div>
    	</div>
	</div>
	<div class="presets">
	    <button class="graph-preset" preset="last_week_query">View This Week</button>
	    <button class="graph-preset" preset="last_two_weeks_query">View Last 2 Weeks</button>
	    <button class="graph-preset" preset="current_month_query">View Last 30 Days</button>
	    <button class="graph-preset" preset="current_year_query">View Last 1 Year</button>
	</div>
</div>

<div class="analytics-graphs">
	<div class="visitChart">
		<canvas id="visitChart"></canvas>

	</div>
	<div class="pageViewChart">
		<canvas id="pageChart"></canvas>

	</div>
	<div class="salesChart">
		<canvas id="salesChart"></canvas>
	</div>
</div>
