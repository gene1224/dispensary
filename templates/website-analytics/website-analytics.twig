<div class="wa-container" id="wa-container">
    <h2><strong>Your Website Dispensary Analytics</strong></h2>
    <div class="view_section_prop" style="display: flex; justify-content: space-between; margin-bottom: 25px;">
        <div class="view_by_section" style="font-weight: 700;">
            View By: &nbsp;&nbsp;
            <select class="viewBySelect" style="padding: 5px;">
                <option value="today">Today</option>
                <option value="yesterday">Yesterday</option>
                <option value="week">This Week</option>
                <option value="month">This Month</option>
                <option value="year">This Year</option>
                <option value="custom_date">Custom Date</option>
            </select>
            <div class="custom_date_range" style="margin-top: 25px; display: none;">
                Date From: <input type="text" id="custom_date_from"> &nbsp;&nbsp;
                Date To: <input type="text" id="custom_date_to"> &nbsp;&nbsp;
                <button id="custom_date_filter"><i class="fa fa-circle-o-notch fa-spin fa-1x fa-fw fa-notif"></i> Date Filter</button>
            </div>
            <div class="notif_container">
                <span class="custom_date_range_notif"></span>
            </div>
        </div>
        <!-- <div class="refresh_view_sectoin">
            <a href="#" style="font-weight: 700;"><i class="fa fa-refresh" aria-hidden="true"></i> Refresh Data</a>
        </div> -->
    </div>
    <!-- <div class="chart-container" style="position: relative; width: 100%;">
        <canvas id="myChart"></canvas>
    </div> -->
    <div class="wa-viewby-container">
        <div class="view-loading">
            <i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i>
        </div>
        <div class="view-container">
            
        </div>
    </div>
    {{ function('do_shortcode', '[analytics_graphs]') }}
    <div class="wa-notif-section-container">
        {% if membership == 'QRX Dispensary Premium Plan' %}
               
        {% elseif membership == 'QRX Dispensary Pro Plan' %}
            <h4>Want professional help on how to improve these statistics? <a href="#" id="changePlanMyAccountPro" class="changePlanMyAccountPro">Upgrade now</a>!</h4>
        {% else %}
            <h4>Want professional help on how to improve these statistics? <a href="#" id="changePlanMyAccount" class="changePlanMyAccount">Upgrade now</a>!</h4>
        {% endif %}
    </div>
    {% include 'website-analytics/product-report.twig' %}
</div>
