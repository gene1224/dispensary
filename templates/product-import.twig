<div class="product-import-container">
	<h1>Available Products</h1>
	<div class="page-controls">
		<a href="{{gird_url}}" class="view-products active">View Products</a>
		<a href="?view=cart" class="view-products">View Products Added (<span class="cart-count">{{cart_count}}</span>)</a>
		<a href="?view=imported" class="view-products">View Imported Products (<span class="imported-count">{{imported_products_count}}</span>)</a>
	</div>
	{% include 'template-parts/grid-controls.twig' %}
	<div class="product-importer-grid" id="product-importer-grid">
		<div class="loader"></div>
	</div>

	<div class="grid-pagination">
		<button id="gridPrev">
			Prev
		</button>
		<button id="currentPage" class="active">1</button>
		<button id="gridNext">
			Next
		</button>
	</div>

</div>
